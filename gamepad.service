[Unit]
Description=Xbox Controller to OSC Bridge
After=network.target

[Service]
# Adjust the path to where you saved the compiled binary
ExecStart=/home/pi/sousaFX-rpi-scripts/gamepad
WorkingDirectory=/home/pi/sousaFX-rpi-scripts/
Restart=always
RestartSec=5
User=root

[Install]
WantedBy=multi-user.target